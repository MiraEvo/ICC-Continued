<Window x:Class="Ink_Canvas.Popups.SelectionCaptureOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SelectionCaptureOverlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowState="Maximized"
        Cursor="Cross"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseUp="Window_MouseUp">
    <Grid>
        <!-- Semi-transparent overlay background -->
        <Canvas x:Name="OverlayCanvas">
            <!-- Dark overlay with hole for selection -->
            <Path x:Name="DarkOverlay" Fill="#80000000" />
        </Canvas>
        
        <!-- Selection rectangle border -->
        <Border x:Name="SelectionBorder"
                BorderBrush="#3b82f6"
                BorderThickness="2"
                Background="Transparent"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.3" ShadowDepth="0" Color="#3b82f6"/>
            </Border.Effect>
        </Border>
        
        <!-- Dimension display tooltip -->
        <Border x:Name="DimensionTooltip"
                Background="#18181b"
                CornerRadius="4"
                Padding="8,4"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock x:Name="DimensionText"
                       Foreground="White"
                       FontSize="12"
                       FontFamily="Segoe UI"/>
        </Border>
        
        <!-- Instructions overlay (shown initially) -->
        <Border x:Name="InstructionsOverlay"
                Background="#60000000"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="8"
                Padding="24,16">
            <StackPanel>
                <TextBlock Text="拖动鼠标选择截图区域"
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           FontWeight="Medium"/>
                <TextBlock Text="按 Esc 键取消"
                           Foreground="#a1a1aa"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
