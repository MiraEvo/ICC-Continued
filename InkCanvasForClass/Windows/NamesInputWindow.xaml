<Window x:Class="Ink_Canvas.NamesInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Canvas"
        xmlns:vm="clr-namespace:Ink_Canvas.ViewModels"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d" FontFamily="Microsoft YaHei UI"

        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Title="{Binding WindowTitle}" Height="500" Width="400"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TextBlock Text="{Binding HintText}" Margin="10" FontTypography="Body"/>
        <ui:TextBox Grid.Row="1"
                    Text="{Binding NamesText, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Microsoft YaHei UI"
                    VerticalScrollBarVisibility="Auto"
                    AcceptsReturn="True"
                    Margin="10,0,10,10"
                    PlaceholderText="请输入名单，每行一个..."/>
        <ui:Button Grid.Row="2"
                   Margin="10"
                   HorizontalAlignment="Right"
                   Content="关闭"
                   FontFamily="Microsoft YaHei UI"
                   Width="100"
                   Command="{Binding CloseCommand}"
                   Appearance="Primary"/>
    </Grid>
</Window>
