    <!-- PPT Navigation Panel Style -->
    <Style x:Key="PPTNavigationPanelStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#a1a1aa"/>
        <Setter Property="Background" Value="#f4f4f5"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>
    
    <!-- PPT Navigation Button Style -->
    <Style x:Key="PPTNavigationButtonStyle" TargetType="Border">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <!-- PPT Feedback Border Style -->
    <Style x:Key="PPTFeedbackBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Background" Value="#18181b"/>
        <Setter Property="Opacity" Value="0"/>
    </Style>
    
</ResourceDictionary>
