<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Eraser Overlay Grid Style -->
    <Style x:Key="EraserOverlayGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
    </Style>
    
    <!-- Eraser Overlay Border Style -->
    <Style x:Key="EraserOverlayBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ForceCursor" Value="True"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>
    
    <!-- Eraser Cursor Brush -->
    <SolidColorBrush x:Key="EraserCursorBrush" Color="Gray" Opacity="0.5"/>
    
    <!-- Eraser Cursor Pen -->
    <Pen x:Key="EraserCursorPen" Brush="Gray" Thickness="1"/>
    
</ResourceDictionary>
