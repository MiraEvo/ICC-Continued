<Window x:Class="Ink_Canvas.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:local="clr-namespace:Ink_Canvas.Views.Settings"
        mc:Ignorable="d"
        Title="应用设置" Height="760" Width="1120"
        MinHeight="640" MinWidth="960"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        Foreground="#FAFAFA"
        ui:ThemeManager.RequestedTheme="Dark"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        ui:TitleBar.IsBackButtonVisible="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Pages/SettingsPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 导航视图专用颜色 -->
            <Color x:Key="NavigationBackgroundColor">#202020</Color>
            <Color x:Key="NavigationItemHoverColor">#2A2A2A</Color>
            <Color x:Key="NavigationItemSelectedColor">#1E3A5F</Color>
            <Color x:Key="SelectedIndicatorColor">#60A5FA</Color>

            <!-- 导航视图专用画刷 -->
            <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="{StaticResource NavigationBackgroundColor}"/>
            <SolidColorBrush x:Key="NavigationItemHoverBrush" Color="{StaticResource NavigationItemHoverColor}"/>
            <SolidColorBrush x:Key="NavigationItemSelectedBrush" Color="{StaticResource NavigationItemSelectedColor}"/>
            <SolidColorBrush x:Key="SelectedIndicatorBrush" Color="{StaticResource SelectedIndicatorColor}"/>

            <!-- 默认 TextBlock 样式 - 确保所有文字可见 -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            </Style>

            <!-- NavigationView 样式覆盖 -->
            <Style TargetType="ui:NavigationView">
                <Setter Property="Background" Value="{StaticResource NavigationBackgroundBrush}"/>
            </Style>

            <!-- NavigationViewItem 样式 - 现代化设计 -->
            <Style TargetType="ui:NavigationViewItem">
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="Padding" Value="16,10,16,10"/>
                <Setter Property="Margin" Value="4,2"/>
                <Setter Property="MinHeight" Value="40"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource NavigationItemSelectedBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource NavigationItemHoverBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- NavigationViewItem 图标样式 -->
            <Style TargetType="ui:FontIcon">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="20"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <ui:NavigationView x:Name="NavView"
                           IsBackButtonVisible="Collapsed"
                           IsPaneToggleButtonVisible="True"
                           PaneDisplayMode="Left"
                           OpenPaneLength="280"
                           CompactPaneLength="56"
                           IsSettingsVisible="False"
                           SelectionChanged="NavView_SelectionChanged"
                           Background="{StaticResource NavigationBackgroundBrush}">

            <!-- 页眉 - 带应用图标和标题 -->
            <ui:NavigationView.PaneHeader>
                <Grid Margin="12,16,12,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8"
                            Background="{StaticResource AccentLightBrush}" Margin="0,0,12,0">
                        <ui:FontIcon Glyph="&#xE713;" FontSize="18"
                                     Foreground="{StaticResource AccentBrush}"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="设置"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="InkCanvasForClass"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:NavigationView.PaneHeader>

            <!-- 导航菜单项 - 使用 Fluent UI System Icons (Segoe Fluent Icons) -->
            <ui:NavigationView.MenuItems>
                <!-- 常用设置分组 -->
                <ui:NavigationViewItemHeader Content="常用"/>

                <!-- 快速设置 - Fluent: Lightning (闪电) -->
                <ui:NavigationViewItem Content="快速设置" Tag="QuickSettings">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE945;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 外观设置 - Fluent: Color (调色板) -->
                <ui:NavigationViewItem Content="外观" Tag="Appearance">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE790;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 功能设置分组 -->
                <ui:NavigationViewItemHeader Content="功能"/>

                <!-- 手势设置 - Fluent: Hand (手部) -->
                <ui:NavigationViewItem Content="手势" Tag="Gesture">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE7C9;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 书写设置 - Fluent: Edit (编辑/笔) -->
                <ui:NavigationViewItem Content="书写" Tag="Writing">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE70F;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 白板设置 - Fluent: Board (白板) -->
                <ui:NavigationViewItem Content="白板" Tag="Whiteboard">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE7AC;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- PowerPoint支持 - Fluent: Slide (演示文稿) -->
                <ui:NavigationViewItem Content="PowerPoint" Tag="PowerPoint">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE8A5;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 系统设置分组 -->
                <ui:NavigationViewItemHeader Content="系统"/>

                <!-- 存储设置 - Fluent: HardDrive (存储) -->
                <ui:NavigationViewItem Content="存储" Tag="Storage">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xEDA2;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 高级设置 - Fluent: Settings (设置齿轮) -->
                <ui:NavigationViewItem Content="高级" Tag="Advanced">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE713;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 自动化设置 - Fluent: Code (代码/自动化) -->
                <ui:NavigationViewItem Content="自动化" Tag="Automation">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE943;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 工具分组 -->
                <ui:NavigationViewItemHeader Content="工具"/>

                <!-- 截图设置 - Fluent: Camera (相机) -->
                <ui:NavigationViewItem Content="截图" Tag="Snapshot">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE722;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 随机点名 - Fluent: Person (人员) -->
                <ui:NavigationViewItem Content="随机点名" Tag="RandomPick">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE77B;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <!-- 底部导航项 -->
            <ui:NavigationView.FooterMenuItems>
                <!-- 关于 -->
                <ui:NavigationViewItem Content="关于" Tag="About">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE946;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItemSeparator Margin="0,4"/>

                <!-- 重启应用 - Fluent: Restart (重启) -->
                <ui:NavigationViewItem Content="重启应用" Tag="Restart" x:Name="RestartItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE777;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                     Foreground="{StaticResource InfoBrush}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 重置设置 - Fluent: Refresh (重置) -->
                <ui:NavigationViewItem Content="重置设置" Tag="Reset" x:Name="ResetItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE72C;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                     Foreground="{StaticResource WarningBrush}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 退出应用 - Fluent: Power (电源) -->
                <ui:NavigationViewItem Content="退出应用" Tag="Exit" x:Name="ExitItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE7E8;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                     Foreground="{StaticResource ErrorBrush}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>

            <!-- 内容区域 -->
            <Border Background="{StaticResource PrimaryBackgroundBrush}">
                <ui:ScrollViewerEx x:Name="ContentScrollViewer"
                                   Padding="48,36,48,48"
                                   VerticalScrollBarVisibility="Auto"
                                   HorizontalScrollBarVisibility="Disabled">
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
                </ui:ScrollViewerEx>
            </Border>
        </ui:NavigationView>
    </Grid>
</Window>
