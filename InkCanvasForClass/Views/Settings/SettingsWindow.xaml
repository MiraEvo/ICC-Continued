<ui:FluentWindow x:Class="Ink_Canvas.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Ink_Canvas.Views.Settings"
        xmlns:pages="clr-namespace:Ink_Canvas.Views.Settings.Pages"
        mc:Ignorable="d"
        Title="应用设置" Height="760" Width="1120"
        MinHeight="640" MinWidth="960"
        WindowStartupLocation="CenterScreen"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Background="{DynamicResource ApplicationBackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="SettingsSurfaceBrush" Color="#99FFFFFF"/>
            <SolidColorBrush x:Key="SettingsBorderBrush" Color="#26000000"/>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            </Style>

            <Style TargetType="ui:CardControl">
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <Style TargetType="ui:CardExpander">
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>

            <Style TargetType="ui:NavigationViewItem">
                <Setter Property="Margin" Value="6,2,6,2"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="应用设置" Icon="pack://application:,,,/Resources/icc.ico" Margin="8,8,8,0"/>

        <Grid Grid.Row="1">
            <Border Margin="8"
                    Background="{StaticResource SettingsSurfaceBrush}"
                    BorderBrush="{StaticResource SettingsBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
                <ui:NavigationView x:Name="NavView"
                                   IsBackButtonVisible="Collapsed"
                                   IsPaneToggleVisible="True"
                                   PaneDisplayMode="Left"
                                   OpenPaneLength="300"
                                   CompactPaneLength="56"
                                   MenuItemsSource="{Binding NavigationItems}"
                                   FooterMenuItemsSource="{Binding NavigationFooter}">

                    <ui:NavigationView.PaneHeader>
                        <Grid Margin="12,14,12,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    CornerRadius="10"
                                    Background="{DynamicResource SystemAccentColorTertiaryBrush}"
                                    Margin="0,0,12,0">
                                <ui:SymbolIcon Symbol="Settings24"
                                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="设置" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="InkCanvasForClass"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </ui:NavigationView.PaneHeader>

                    <ui:NavigationView.PaneFooter>
                        <Border Margin="8,8,8,12"
                                Padding="10,8"
                                CornerRadius="8"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}">
                            <TextBlock Text="Fluent UI / WPF UI"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Border>
                    </ui:NavigationView.PaneFooter>
                </ui:NavigationView>
            </Border>
        </Grid>

        <ui:ContentDialogHost x:Name="RootContentDialogPresenter" Grid.RowSpan="2" />
    </Grid>
</ui:FluentWindow>
