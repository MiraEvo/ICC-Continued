<Window x:Class="Ink_Canvas.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:local="clr-namespace:Ink_Canvas.Views.Settings"
        mc:Ignorable="d"
        Title="应用设置" Height="720" Width="1080"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        Foreground="#FAFAFA"
        ui:ThemeManager.RequestedTheme="Dark"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <ResourceDictionary>
            <!-- 优化的颜色定义 - 现代深色主题（匹配图片风格） -->
            <Color x:Key="PrimaryBackgroundColor">#1A1A1A</Color>
            <Color x:Key="SecondaryBackgroundColor">#252525</Color>
            <Color x:Key="NavigationBackgroundColor">#252525</Color>
            <Color x:Key="CardBackgroundColor">#2D2D30</Color>
            <Color x:Key="CardHoverBackgroundColor">#3A3A3D</Color>
            <Color x:Key="AccentColor">#60A5FA</Color>
            <Color x:Key="AccentHoverColor">#93C5FD</Color>
            <Color x:Key="SelectedIndicatorColor">#60A5FA</Color>
            <Color x:Key="PrimaryTextColor">#FAFAFA</Color>
            <Color x:Key="SecondaryTextColor">#A1A1AA</Color>
            <Color x:Key="TertiaryTextColor">#71717A</Color>
            <Color x:Key="BorderColor">#3F3F46</Color>
            <Color x:Key="DividerColor">#27272A</Color>
            <Color x:Key="NavigationItemHoverColor">#2A2A2A</Color>
            <Color x:Key="NavigationItemSelectedColor">#1E3A5F</Color>

            <!-- 画刷定义 -->
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
            <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
            <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="{StaticResource NavigationBackgroundColor}"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
            <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="{StaticResource CardHoverBackgroundColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
            <SolidColorBrush x:Key="SelectedIndicatorBrush" Color="{StaticResource SelectedIndicatorColor}"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
            <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource TertiaryTextColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
            <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
            <SolidColorBrush x:Key="NavigationItemHoverBrush" Color="{StaticResource NavigationItemHoverColor}"/>
            <SolidColorBrush x:Key="NavigationItemSelectedBrush" Color="{StaticResource NavigationItemSelectedColor}"/>

            <!-- 页面标题样式 -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Margin" Value="0,0,0,24"/>
            </Style>

            <!-- 设置卡片容器样式 -->
            <Style x:Key="SettingsCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- 设置项标题样式 -->
            <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 设置项描述样式 -->
            <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <!-- 设置分组标题样式 -->
            <Style x:Key="SettingsGroupTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,20,0,12"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            </Style>

            <!-- 占位符文本样式 -->
            <Style x:Key="PlaceholderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
            </Style>

            <!-- 默认 TextBlock 样式 - 确保所有文字可见 -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            </Style>

            <!-- NavigationView 样式覆盖 -->
            <Style TargetType="ui:NavigationView">
                <Setter Property="Background" Value="{StaticResource NavigationBackgroundBrush}"/>
            </Style>

            <!-- NavigationViewItem 样式 - 匹配图片中的左侧高亮条 -->
            <Style TargetType="ui:NavigationViewItem">
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="Padding" Value="20,10,16,10"/>
                <Setter Property="Margin" Value="0,1"/>
                <Setter Property="MinHeight" Value="44"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource NavigationItemSelectedBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource NavigationItemHoverBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- NavigationViewItem 图标样式 - 使用 Fluent UI System Icons -->
            <Style TargetType="ui:FontIcon">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="18"/>
                <Setter Property="Height" Value="18"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <ui:NavigationView x:Name="NavView"
                           IsBackButtonVisible="Collapsed"
                           IsPaneToggleButtonVisible="True"
                           PaneDisplayMode="Left"
                           OpenPaneLength="260"
                           CompactPaneLength="60"
                           IsSettingsVisible="False"
                           SelectionChanged="NavView_SelectionChanged"
                           Background="{StaticResource NavigationBackgroundBrush}">

            <!-- 页眉 -->
            <ui:NavigationView.PaneHeader>
                <Grid>
                    <TextBlock Text="设置"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="16,20,16,24"/>
                </Grid>
            </ui:NavigationView.PaneHeader>

            <!-- 导航菜单项 - 使用 Fluent UI System Icons (Segoe Fluent Icons) -->
            <ui:NavigationView.MenuItems>
                <!-- 快速设置 - Fluent: Lightning (闪电) -->
                <ui:NavigationViewItem Content="快速设置" Tag="QuickSettings">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE945;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 外观设置 - Fluent: Color (调色板) -->
                <ui:NavigationViewItem Content="外观" Tag="Appearance">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE790;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 手势设置 - Fluent: Hand (手部) -->
                <ui:NavigationViewItem Content="手势" Tag="Gesture">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE7C9;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 书写设置 - Fluent: Edit (编辑/笔) -->
                <ui:NavigationViewItem Content="书写" Tag="Writing">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE70F;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 白板设置 - Fluent: Board (白板) -->
                <ui:NavigationViewItem Content="白板" Tag="Whiteboard">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE7AC;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- PowerPoint支持 - Fluent: Slide (演示文稿) -->
                <ui:NavigationViewItem Content="PowerPoint支持" Tag="PowerPoint">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE8A5;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 存储设置 - Fluent: HardDrive (存储) -->
                <ui:NavigationViewItem Content="存储" Tag="Storage">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xEDA2;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItemSeparator/>

                <!-- 高级设置 - Fluent: Settings (设置齿轮) -->
                <ui:NavigationViewItem Content="高级" Tag="Advanced">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE713;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 自动化设置 - Fluent: Code (代码/自动化) -->
                <ui:NavigationViewItem Content="自动化" Tag="Automation">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE943;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 截图设置 - Fluent: Camera (相机) -->
                <ui:NavigationViewItem Content="截图" Tag="Snapshot">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE722;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 随机点名 - Fluent: Person (人员) -->
                <ui:NavigationViewItem Content="随机点名" Tag="RandomPick">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE77B;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <!-- 底部导航项 -->
            <ui:NavigationView.FooterMenuItems>
                <!-- 重启应用 - Fluent: Restart (重启) -->
                <ui:NavigationViewItem Content="重启" Tag="Restart" x:Name="RestartItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE777;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 重置设置 - Fluent: Refresh (重置) -->
                <ui:NavigationViewItem Content="重置" Tag="Reset" x:Name="ResetItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE72C;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- 退出应用 - Fluent: Power (电源) -->
                <ui:NavigationViewItem Content="退出" Tag="Exit" x:Name="ExitItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE7E8;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItemSeparator/>

                <ui:NavigationViewItem Content="关于" Tag="About">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE946;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>

            <!-- 内容区域 -->
            <ui:ScrollViewerEx x:Name="ContentScrollViewer"
                               Padding="40,32,40,32"
                               Background="{StaticResource PrimaryBackgroundBrush}">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
            </ui:ScrollViewerEx>
        </ui:NavigationView>
    </Grid>
</Window>
