<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">

    <!-- 设置页面共享样式资源字典 - 现代深色主题 -->

    <!-- 颜色定义 -->
    <Color x:Key="PrimaryBackgroundColor">#1A1A1A</Color>
    <Color x:Key="SecondaryBackgroundColor">#252525</Color>
    <Color x:Key="CardBackgroundColor">#2D2D30</Color>
    <Color x:Key="CardHoverBackgroundColor">#3A3A3D</Color>
    <Color x:Key="AccentColor">#60A5FA</Color>
    <Color x:Key="AccentHoverColor">#93C5FD</Color>
    <Color x:Key="PrimaryTextColor">#FAFAFA</Color>
    <Color x:Key="SecondaryTextColor">#A1A1AA</Color>
    <Color x:Key="TertiaryTextColor">#71717A</Color>
    <Color x:Key="BorderColor">#3F3F46</Color>
    <Color x:Key="DividerColor">#27272A</Color>
    <Color x:Key="SuccessColor">#4ADE80</Color>
    <Color x:Key="WarningColor">#FBBF24</Color>
    <Color x:Key="ErrorColor">#F87171</Color>
    <Color x:Key="NewFeatureColor">#10B981</Color>

    <!-- 画刷定义 -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="{StaticResource CardHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource TertiaryTextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="NewFeatureBrush" Color="{StaticResource NewFeatureColor}"/>

    <!-- 页面标题样式 -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- 设置卡片容器样式 -->
    <Style x:Key="SettingsCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 设置项标题样式 -->
    <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 设置项描述样式 -->
    <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- 设置分组标题样式 -->
    <Style x:Key="SettingsGroupTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,20,0,12"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
    </Style>

    <!-- 占位符文本样式 -->
    <Style x:Key="PlaceholderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
    </Style>

    <!-- 图标样式 -->
    <Style x:Key="SettingsIconStyle" TargetType="ui:FontIcon">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Margin" Value="0,0,16,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- 值显示样式 -->
    <Style x:Key="SettingsValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <!-- 链接样式 -->
    <Style x:Key="SettingsLinkStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>

    <!-- 标签样式 -->
    <Style x:Key="SettingsTagStyle" TargetType="Border">
        <Setter Property="Background" Value="#33FFFFFF"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,0,8,8"/>
    </Style>

    <!-- 新功能标签样式 -->
    <Style x:Key="NewFeatureTagStyle" TargetType="Border">
        <Setter Property="Background" Value="#1A10B981"/>
        <Setter Property="BorderBrush" Value="{StaticResource NewFeatureBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 新功能标签文本样式 -->
    <Style x:Key="NewFeatureTagTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource NewFeatureBrush}"/>
    </Style>

    <!-- Admin Tag Style -->
    <Style x:Key="AdminTagStyle" TargetType="Border" BasedOn="{StaticResource NewFeatureTagStyle}">
        <Setter Property="Background" Value="#33F59E0B"/>
        <Setter Property="BorderBrush" Value="#F59E0B"/>
    </Style>
    <Style x:Key="AdminTagTextStyle" TargetType="TextBlock" BasedOn="{StaticResource NewFeatureTagTextStyle}">
        <Setter Property="Foreground" Value="#F59E0B"/>
    </Style>

    <!-- Experimental Tag Style -->
    <Style x:Key="ExperimentalTagStyle" TargetType="Border" BasedOn="{StaticResource NewFeatureTagStyle}">
        <Setter Property="Background" Value="#33EF4444"/>
        <Setter Property="BorderBrush" Value="#EF4444"/>
    </Style>
    <Style x:Key="ExperimentalTagTextStyle" TargetType="TextBlock" BasedOn="{StaticResource NewFeatureTagTextStyle}">
        <Setter Property="Foreground" Value="#EF4444"/>
    </Style>

    <!-- 提示文本样式 -->
    <Style x:Key="HintTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
    </Style>

    <!-- 复选框样式 -->
    <Style x:Key="SettingsCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="MinWidth" Value="140"/>
    </Style>

    <!-- 应用卡片样式 -->
    <Style x:Key="AppCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,8,8"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="90"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CardHoverBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 应用图标样式 -->
    <Style x:Key="AppIconStyle" TargetType="Image">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <!-- 应用名称样式 -->
    <Style x:Key="AppNameStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <!-- 应用开关样式 -->
    <Style x:Key="AppToggleStyle" TargetType="ui:ToggleSwitch">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="0"/>
    </Style>

    <!-- 分组标题样式（小） -->
    <Style x:Key="SmallGroupTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
    </Style>

    <!-- 滑块按钮样式 -->
    <Style x:Key="SliderRepeatButtonStyle" TargetType="RepeatButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Height="4" Background="{TemplateBinding Background}" CornerRadius="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 滑块拖动样式 -->
    <Style x:Key="SliderThumbStyle" TargetType="Thumb">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" 
                             Fill="{TemplateBinding Background}" Stroke="{StaticResource PrimaryBackgroundBrush}" 
                             StrokeThickness="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 现代滑块样式 -->
    <Style x:Key="ModernSliderStyle" TargetType="Slider">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}" Background="{StaticResource AccentBrush}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}" Background="{StaticResource AccentBrush}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}" Background="{StaticResource TertiaryTextBrush}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
