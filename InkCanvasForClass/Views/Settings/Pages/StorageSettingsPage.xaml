<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.StorageSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:Ink_Canvas.Converters"
             xmlns:wc="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             mc:Ignorable="d"
             d:DesignHeight="1200" d:DesignWidth="600"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:FileSizeConverter x:Key="FileSizeConverter"/>
            <converters:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter"/>
            <wc:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ui:DynamicScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
        <StackPanel Margin="0,0,12,24">
            <ui:TextBlock Text="存储位置" FontTypography="Title" Margin="0,0,0,8" />

            <ui:TextBlock Text="设置的存储位置用于存放手动保存的墨迹、自动保存的墨迹、手动保存的板书、缓存文件、部分功能的配置文件和屏幕截图。注意 ICC 的设置档存放在 ICC 的安装目录下，无法迁移到设置的存储目录。"
                       FontTypography="Body" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,24" TextWrapping="Wrap"/>

            <!-- Storage Location Selection -->
            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Folder24" Foreground="#FBBF24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="数据存储目录" FontTypography="Body"/>
                        <ui:TextBlock Text="{Binding Storage.CurrentStoragePath}" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <ComboBox VerticalAlignment="Center" Width="240"
                          ItemsSource="{Binding Storage.StorageLocationOptions}"
                          SelectedValue="{Binding Storage.StorageLocation, Mode=TwoWay}"
                          SelectedValuePath="Tag">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="{Binding Icon}" Margin="0,0,8,0" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Path}" Margin="8,0,0,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis" MaxWidth="120" VerticalAlignment="Center"
                                           ToolTip="{Binding Path}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </ui:CardControl>

            <!-- Custom Path Input -->
            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Style>
                    <Style TargetType="ui:CardControl" BasedOn="{StaticResource {x:Type ui:CardControl}}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Storage.StorageLocation}" Value="custom">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:CardControl.Style>
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="FolderAdd24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <ui:TextBlock Text="自定义路径" FontTypography="Body"/>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding Storage.UserStorageLocation, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,8,0"/>
                    <Button Content="浏览" Command="{Binding Storage.BrowseFolderCommand}"/>
                </StackPanel>
            </ui:CardControl>

            <!-- Storage Analysis -->
            <ui:TextBlock Text="存储分析" FontTypography="BodyStrong" Margin="0,12,0,8"/>

            <ui:CardExpander Margin="0,0,0,24" IsExpanded="True">
                <ui:CardExpander.Header>
                    <ui:TextBlock Text="磁盘空间使用情况" FontTypography="Body"/>
                </ui:CardExpander.Header>
                <ui:CardExpander.Icon>
                    <ui:SymbolIcon Symbol="DataArea24"/>
                </ui:CardExpander.Icon>
                <StackPanel>
                    <!-- Disk Usage Bar -->
                    <Grid Height="24" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding Storage.OtherUsedSpace, Converter={StaticResource DoubleToGridLengthConverter}}"/> <!-- Other Used -->
                            <ColumnDefinition Width="{Binding Storage.ICCDataSpace, Converter={StaticResource DoubleToGridLengthConverter}}"/> <!-- ICC Data -->
                            <ColumnDefinition Width="{Binding Storage.FreeSpace, Converter={StaticResource DoubleToGridLengthConverter}}"/> <!-- Free -->
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0099FF" RadiusX="4" RadiusY="4" Margin="0,0,2,0"/>
                        <Rectangle Grid.Column="1" Fill="#FF3333" RadiusX="4" RadiusY="4" Margin="0,0,2,0"/>
                        <Rectangle Grid.Column="2" Fill="#333333" RadiusX="4" RadiusY="4"/>
                    </Grid>

                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Rectangle Width="12" Height="12" Fill="#0099FF" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="硬盘其他占用" Margin="0,0,16,0" FontSize="12"/>
                        <Rectangle Width="12" Height="12" Fill="#FF3333" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="ICC数据占用" Margin="0,0,16,0" FontSize="12"/>
                        <Rectangle Width="12" Height="12" Fill="#333333" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="空闲空间" FontSize="12"/>
                    </StackPanel>

                    <ui:TextBlock Text="{Binding Storage.CurrentStoragePath, StringFormat='当前位置：{0}'}" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,4"/>
                    <ui:TextBlock Text="{Binding Storage.UsedSpace, Converter={StaticResource FileSizeConverter}, StringFormat='磁盘使用情况：已用 {0}'}" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,4"/>
                    <ui:TextBlock Text="{Binding Storage.ICCDataSpace, Converter={StaticResource FileSizeConverter}}" 
                               FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,16"/>
                    <ui:TextBlock Text="{Binding Storage.TotalFileCount, StringFormat='共 {0} 个文件'}" 
                               FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,16"/>

                    <!-- ICC Data Breakdown Bar -->
                    <Grid Height="16" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding Storage.AutoSavedInkSize, Converter={StaticResource DoubleToGridLengthConverter}}"/>
                            <ColumnDefinition Width="{Binding Storage.BoardImageRefSize, Converter={StaticResource DoubleToGridLengthConverter}}"/>
                            <ColumnDefinition Width="{Binding Storage.ExportedBoardSize, Converter={StaticResource DoubleToGridLengthConverter}}"/>
                            <ColumnDefinition Width="{Binding Storage.CacheSize, Converter={StaticResource DoubleToGridLengthConverter}}"/>
                            <ColumnDefinition Width="{Binding Storage.AutoSavedScreenshotSize, Converter={StaticResource DoubleToGridLengthConverter}}"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#F97316"/> <!-- Auto Saved Ink -->
                        <Rectangle Grid.Column="1" Fill="#EAB308"/> <!-- Board Image Ref -->
                        <Rectangle Grid.Column="2" Fill="#22C55E"/> <!-- Exported Board -->
                        <Rectangle Grid.Column="3" Fill="#0EA5E9"/> <!-- Cache -->
                        <Rectangle Grid.Column="4" Fill="#A855F7"/> <!-- Auto Saved Screenshot -->
                    </Grid>

                    <!-- Legend 2 -->
                    <WrapPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                            <Rectangle Width="12" Height="12" Fill="#F97316" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                            <TextBlock Text="自动保存的墨迹" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                            <Rectangle Width="12" Height="12" Fill="#EAB308" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                            <TextBlock Text="板书的图片引用" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                            <Rectangle Width="12" Height="12" Fill="#22C55E" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                            <TextBlock Text="导出的板书文件" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                            <Rectangle Width="12" Height="12" Fill="#0EA5E9" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                            <TextBlock Text="缓存文件" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                            <Rectangle Width="12" Height="12" Fill="#A855F7" Margin="0,0,4,0" RadiusX="2" RadiusY="2"/>
                            <TextBlock Text="自动保存的截图文件" FontSize="12"/>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Data Type List -->
                    <StackPanel>
                        <!-- Auto Saved Ink -->
                        <ui:CardControl Margin="0,0,0,4">
                            <ui:CardControl.Icon>
                                <ui:SymbolIcon Symbol="Save24"/>
                            </ui:CardControl.Icon>
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <ui:TextBlock Text="自动保存的墨迹" FontTypography="Body"/>
                                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Storage.AutoSavedInkPercentage, StringFormat='{}{0:F1}%、', Mode=OneWay}"/>
                                        <Run Text="{Binding Storage.AutoSavedInkSize, Converter={StaticResource FileSizeConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button Icon="{ui:SymbolIcon Symbol=FolderOpen24}" Appearance="Secondary"
                                       Command="{Binding Storage.OpenFolderCommand}" CommandParameter="autoSavedInk"/>
                        </ui:CardControl>

                        <!-- Board Image Ref -->
                        <ui:CardControl Margin="0,0,0,4">
                            <ui:CardControl.Icon>
                                <ui:SymbolIcon Symbol="Image24"/>
                            </ui:CardControl.Icon>
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <ui:TextBlock Text="板书的图片引用" FontTypography="Body"/>
                                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Storage.BoardImageRefPercentage, StringFormat='{}{0:F1}%、', Mode=OneWay}"/>
                                        <Run Text="{Binding Storage.BoardImageRefSize, Converter={StaticResource FileSizeConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button Icon="{ui:SymbolIcon Symbol=FolderOpen24}" Appearance="Secondary"
                                       Command="{Binding Storage.OpenFolderCommand}" CommandParameter="boardImageRef"/>
                        </ui:CardControl>

                        <!-- Exported Board -->
                        <ui:CardControl Margin="0,0,0,4">
                            <ui:CardControl.Icon>
                                <ui:SymbolIcon Symbol="Share24"/>
                            </ui:CardControl.Icon>
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <ui:TextBlock Text="导出的板书文件" FontTypography="Body"/>
                                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Storage.ExportedBoardPercentage, StringFormat='{}{0:F1}%、', Mode=OneWay}"/>
                                        <Run Text="{Binding Storage.ExportedBoardSize, Converter={StaticResource FileSizeConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button Icon="{ui:SymbolIcon Symbol=FolderOpen24}" Appearance="Secondary"
                                       Command="{Binding Storage.OpenFolderCommand}" CommandParameter="exportedBoard"/>
                        </ui:CardControl>

                        <!-- Cache -->
                        <ui:CardControl Margin="0,0,0,4">
                            <ui:CardControl.Icon>
                                <ui:SymbolIcon Symbol="Delete24"/>
                            </ui:CardControl.Icon>
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <ui:TextBlock Text="缓存文件" FontTypography="Body"/>
                                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Storage.CachePercentage, StringFormat='{}{0:F1}%、', Mode=OneWay}"/>
                                        <Run Text="{Binding Storage.CacheSize, Converter={StaticResource FileSizeConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button Icon="{ui:SymbolIcon Symbol=FolderOpen24}" Appearance="Secondary"
                                       Command="{Binding Storage.OpenFolderCommand}" CommandParameter="cache"/>
                        </ui:CardControl>

                        <!-- Auto Saved Screenshot -->
                        <ui:CardControl Margin="0,0,0,4">
                            <ui:CardControl.Icon>
                                <ui:SymbolIcon Symbol="Camera24"/>
                            </ui:CardControl.Icon>
                            <ui:CardControl.Header>
                                <StackPanel>
                                    <ui:TextBlock Text="自动保存的截图文件" FontTypography="Body"/>
                                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Storage.AutoSavedScreenshotPercentage, StringFormat='{}{0:F1}%、', Mode=OneWay}"/>
                                        <Run Text="{Binding Storage.AutoSavedScreenshotSize, Converter={StaticResource FileSizeConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button Icon="{ui:SymbolIcon Symbol=FolderOpen24}" Appearance="Secondary"
                                       Command="{Binding Storage.OpenFolderCommand}" CommandParameter="autoSavedScreenshot"/>
                        </ui:CardControl>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <ui:Button Content="清理缓存文件" Icon="{ui:SymbolIcon Symbol=Delete24}" Command="{Binding Storage.ClearCacheCommand}" Margin="0,0,16,0"/>
                        <ui:Button Content="清理自动保存的截图" Icon="{ui:SymbolIcon Symbol=Delete24}" Command="{Binding Storage.ClearAutoSavedScreenshotsCommand}"/>
                    </StackPanel>

                </StackPanel>
            </ui:CardExpander>

            <!-- Auto Cleanup -->
            <ui:TextBlock Text="自动清理" FontTypography="BodyStrong" Margin="0,0,0,8"/>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="DeleteDismiss24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="定期自动删除超过保存时间的墨迹、截图文件" FontTypography="Body"/>
                        <ui:TextBlock Text="请注意如果开启自动删除功能，将会删除自动保存目录下所有后缀名为 .icstk、.iccink 和 .png 的文件！手动保存不受影响！"
                                      FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding Automation.AutoDelSavedFiles, Mode=TwoWay}"/>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4" IsEnabled="{Binding Automation.AutoDelSavedFiles}">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="NumberSymbolSquare24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="自动删除阈值（天）" FontTypography="Body"/>
                        <ui:TextBlock Text="仅删除超过天数的自动保存墨迹和截图" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:NumberBox Width="120"
                                  Minimum="1"
                                  MaxDecimalPlaces="0"
                                  SmallChange="1"
                                  LargeChange="7"
                                  Value="{Binding Automation.AutoDelSavedFilesDaysThreshold, Mode=TwoWay}"/>
                    <ui:TextBlock Text="天" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </ui:CardControl>

        </StackPanel>
    </ui:DynamicScrollViewer>
</UserControl>
