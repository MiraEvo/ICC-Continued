<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Ink_Canvas.Converters"
                    xmlns:legacyConverters="clr-namespace:Ink_Canvas.Converter">

    <!-- 
    =====================================================
    ConvertersDictionary.xaml - 整合转换器资源字典
    =====================================================
    
    本资源字典整合了所有值转换器，包括：
    - MVVM 转换器 (Ink_Canvas.Converters 命名空间)
    - 旧版转换器 (Ink_Canvas.Converter 命名空间)
    
    使用方式：
    在 App.xaml 或需要使用转换器的地方合并此资源字典：
    <ResourceDictionary Source="/Resources/Converters/ConvertersDictionary.xaml" />
    -->

    <!-- ===== 布尔值转换器 ===== -->
    
    <!-- 布尔值转可见性（True -> Visible, False -> Collapsed） -->
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    
    <!-- 布尔值转可见性（反转：True -> Collapsed, False -> Visible） -->
    <converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" Invert="True" />
    
    <!-- 布尔值转可见性（使用 Hidden 代替 Collapsed） -->
    <converters:BoolToVisibilityConverter x:Key="BoolToHiddenVisibilityConverter" UseHidden="True" />
    
    <!-- 布尔值反转转换器 -->
    <converters:InverseBoolConverter x:Key="InverseBoolConverter" />

    <!-- ===== 枚举转换器 ===== -->
    
    <!-- 枚举值比较转布尔值 -->
    <converters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
    
    <!-- 枚举值比较转可见性 -->
    <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
    
    <!-- 枚举值比较转可见性（反转） -->
    <converters:EnumToVisibilityConverter x:Key="InverseEnumToVisibilityConverter" Invert="True" />

    <!-- ===== 颜色转换器 ===== -->
    
    <!-- InkColor 枚举转 Color -->
    <converters:InkColorToColorConverter x:Key="InkColorToColorConverter" />
    
    <!-- InkColor 枚举转 SolidColorBrush -->
    <converters:InkColorToBrushConverter x:Key="InkColorToBrushConverter" />
    
    <!-- Color 转 SolidColorBrush -->
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />

    <!-- ===== 空值/数值转换器 ===== -->
    
    <!-- 空值检查转可见性（非空显示） -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    
    <!-- 空值检查转可见性（空值显示） -->
    <converters:NullToVisibilityConverter x:Key="InverseNullToVisibilityConverter" Invert="True" />
    
    <!-- 数值比较转可见性 -->
    <converters:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter" />
    
    <!-- 索引比较转布尔值 -->
    <converters:IndexToBoolConverter x:Key="IndexToBoolConverter" />

    <!-- ===== 多值转换器 ===== -->
    
    <!-- 多布尔值 AND 逻辑 -->
    <converters:MultiBoolAndConverter x:Key="MultiBoolAndConverter" />
    
    <!-- 多布尔值 OR 逻辑 -->
    <converters:MultiBoolOrConverter x:Key="MultiBoolOrConverter" />
    
    <!-- 多布尔值转可见性（AND 逻辑） -->
    <converters:MultiBoolToVisibilityConverter x:Key="MultiBoolToVisibilityConverter" />
    
    <!-- 多布尔值转可见性（OR 逻辑） -->
    <converters:MultiBoolToVisibilityConverter x:Key="MultiBoolOrToVisibilityConverter" UseOr="True" />

    <!-- ===== 格式化转换器 ===== -->
    
    <!-- 字符串格式化 -->
    <converters:StringFormatConverter x:Key="StringFormatConverter" />
    
    <!-- 双精度值乘法 -->
    <converters:DoubleMultiplierConverter x:Key="DoubleMultiplierConverter" />

    <!-- ===== 旧版转换器 (Legacy Converters) ===== -->
    
    <!-- 数字转字符串（人数显示） -->
    <legacyConverters:IntNumberToString x:Key="IntNumberToString" />
    
    <!-- 数字转字符串（条数显示） -->
    <legacyConverters:IntNumberToString2 x:Key="IntNumberToString2" />
    
    <!-- 启用状态转透明度 -->
    <legacyConverters:IsEnabledToOpacityConverter x:Key="IsEnabledToOpacityConverter" />

</ResourceDictionary>