<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
    =====================================================
    IconsDictionary.xaml - 整合图标资源字典
    =====================================================
    
    本资源字典整合了所有图标资源，包括：
    - MainWindowIcons.xaml: 主窗口图标（白板导航、工具、PPT控制、设置等）
    - SelectionControlIcons.xaml: 选择控件图标（拖拽、克隆、旋转、翻转等）
    - GeometryIcons.xaml: 几何图标（光标、画笔、橡皮擦等 V2 版本）
    - IconImageDictionary.xaml: 图像图标（旋转、翻转等动画图标）
    - DrawShapeImageDictionary.xaml: 形状绘制图标
    - SeewoImageDictionary.xaml: 希沃相关图标
    - 根目录 IconsDictionary.xaml: 选择控件相关图标
    
    使用方式：
    在 App.xaml 或需要使用图标的地方合并此资源字典：
    <ResourceDictionary Source="/Resources/Icons/IconsDictionary.xaml" />
    -->
    
    <ResourceDictionary.MergedDictionaries>
        <!-- 主窗口图标 -->
        <ResourceDictionary Source="MainWindowIcons.xaml" />
        
        <!-- 选择控件图标 -->
        <ResourceDictionary Source="SelectionControlIcons.xaml" />
        
        <!-- 几何图标 (V2 版本) -->
        <ResourceDictionary Source="/InkCanvasForClass;component/Resources/GeometryIcons.xaml" />
        
        <!-- 图像图标 -->
        <ResourceDictionary Source="/InkCanvasForClass;component/Resources/IconImageDictionary.xaml" />
        
        <!-- 形状绘制图标 -->
        <ResourceDictionary Source="/InkCanvasForClass;component/Resources/DrawShapeImageDictionary.xaml" />
        
        <!-- 希沃相关图标 -->
        <ResourceDictionary Source="/InkCanvasForClass;component/Resources/SeewoImageDictionary.xaml" />
        
        <!-- 根目录图标字典（选择控件相关） -->
        <ResourceDictionary Source="/InkCanvasForClass;component/Resources/IconsDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- 
    =====================================================
    通用图标定义
    =====================================================
    以下是一些通用的图标定义，可以在整个应用程序中使用
    -->
    
    <!-- 通用图标画刷 -->
    <SolidColorBrush x:Key="IconDefaultBrush" Color="#18181b" />
    <SolidColorBrush x:Key="IconWhiteBrush" Color="White" />
    <SolidColorBrush x:Key="IconDangerBrush" Color="#dc2626" />
    <SolidColorBrush x:Key="IconSuccessBrush" Color="#15803d" />
    <SolidColorBrush x:Key="IconWarningBrush" Color="#f59e0b" />
    <SolidColorBrush x:Key="IconInfoBrush" Color="#3b82f6" />
    
</ResourceDictionary>
